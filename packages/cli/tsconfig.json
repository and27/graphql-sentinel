{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src", 
    "declaration": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES2016", 
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}